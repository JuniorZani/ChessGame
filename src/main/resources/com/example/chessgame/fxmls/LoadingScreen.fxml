<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="430.0" prefWidth="570.0" styleClass="background" stylesheets="@styles/LoadingScreen.css"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.chessgame.Controllers.LoadingScreenController">
    <ImageView fitHeight="430.0" fitWidth="570.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@../images/loading.png"/>
    </ImageView>
    <ProgressBar fx:id="progressBar" layoutX="120.0" layoutY="338.0" prefHeight="23.0" prefWidth="330.0"
                 progress="0.0"/>
    <Button fx:id="goOn" layoutX="251.0" layoutY="380.0" mnemonicParsing="false" onAction="#finishedLoading"
            prefHeight="30.0" prefWidth="69.0" text="Continue" visible="false">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Button>
</AnchorPane>
